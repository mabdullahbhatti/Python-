# This function take age as an interger value and returns the eligible 

age = int(input("Enter age:"))

#Check condition if greater than 18  eligible or ineligible

def vote_eligibility(age) :
    if age >= 18 :
        return "eligible"
    else :
        return "not eligible"

print(vote_eligibility(age))
