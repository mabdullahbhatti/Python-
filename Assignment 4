#This function take the base and exponent numbers and gives solution

def number_exponent(base, exponent):
 answer = base ** exponent
 return answer

base= float(input("Enter the base number: "))
exponent= float(input("Enter the exponent: "))

#calling function
answer =number_exponent(base, exponent)

print(number_exponent(base, exponent))

