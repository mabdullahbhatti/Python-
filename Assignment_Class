class Student():
    def __init__(self, name, roll_number):
        self.name = name
        self.roll_number = roll_number
        
        
def setAge(self,age):
       self.Age = 25
       return self.Age
        
def setMarks(self,Marks):
     self.Marks = 495  
     return self.Marks
s1=Student('joseph',111)


def display(self):
        print("Name:%s, roll_number:%d, age:%d, Marks:%d"  % (self.name, self.roll_number, self.Age,self.Marks))        
        
